# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET    /                           controllers.Application.index()
#POST   /save                       controllers.Application.save()
#GET    /edit/:id                    controllers.Application.edit(id:Long)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)

PUT     /person/:id                 controllers.Application.update(id:Long)
POST    /person                     controllers.Application.create()
GET     /person/:id                 controllers.Application.findPersonById(id:Long)
DELETE  /person/:id                 controllers.Application.delete(id:Long)
